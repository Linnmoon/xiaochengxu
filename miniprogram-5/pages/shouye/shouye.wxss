/* 整体容器 */
.container{
    padding: 15rpx;
    text-align: center;
    background-image: url(https://c-ssl.duitang.com/uploads/blog/202101/14/20210114143111_babe9.jpeg);
  padding-top: 50rpx;
  padding-bottom: 800rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  }
  
  /* 新闻标题 */
  .title{
    font-size: 16pt;
    line-height:80rpx; 
    text-align:left;
  }
  
  /* 新闻图片 */
  .poster image{
    width: 100%;
  }
  
  /* 新闻正文 */
  .content{
    text-align:left;
    font-size: 12pt;
    line-height: 60rpx;
    text-indent: 2em;
    text-emphasis: weight;
  }
  
  /* 新闻日期 */
  .add_date{
    font-size: 12pt;
    text-align: left;
    line-height: 30rpx;
    margin-right: 25rpx;
    margin-top: 20rpx;
  }
  
  /* 收藏按钮 */
  button{
    width: 250rpx;
    height: 100rpx;
    margin: 20rpx auto;
  }